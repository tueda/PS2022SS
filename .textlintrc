{
  "filters": {
    "allowlist": {
      "allow": [
        "/\\$\\$[\\s\\S]+?\\$\\$/m",
        "/\\$.+?\\$/",
        "/\\(\\d+[a-z]?\\)/",
        "/\\([a-z]\\)/",
        "/<.*?>/",
        "/{: +download=.*?}/"
      ]
    },
    "comments": true
  },
  "rules": {
    "preset-ja-engineering-paper": {
      "no-synonyms": {
        "allows": ["日本"],   // workaround for Japan vs. 「日本」語訳
      },
      "unify-kuten-and-touten": {
        "kuten": "。",
        "touten": "、",
      }
    },
    "preset-ja-spacing": true,
    "preset-ja-technical-writing": {
      "max-kanji-continuous-len": {
        max: 5,
        allow: [
          "一般相対性理論",
          "一様分布乱数",
          "科学技術計算",
          "拡大係数行列",
          "確率密度関数",
          "確率密度変数",
          "角運動量保存則",
          "感染症累計感染者数",
          "擬似乱数生成器",
          "疑似乱数発生器",
          "空気抵抗係数",
          "決定論的問題",
          "固定小数点数",
          "最大再帰回数",
          "四倍精度浮動小数点数",
          "事後確率分布",
          "事前確率分布",
          "周期境界条件",
          "常微分方程式",
          "線形方程式系",
          "素粒子物理学",
          "大規模科学技術計算",
          "単精度浮動小数点数",
          "中心極限定理",
          "電子情報通信学会技術研究報告",
          "任意精度演算",
          "任意精度多倍長整数",
          "任意精度浮動小数点数",
          "排他的論理和",
          "倍精度浮動小数点数",
          "媒介変数表示",
          "半精度浮動小数点数",
          "比較演算結果",
          "標本標準偏差",
          "浮動小数点数",
          "浮動小数点数型",
          "符号化文字集合",
          "複合代入演算子",
          "文字符号化形式",
          "文字符号化方式",
          "平均二乗変位",
          "万有引力定数",
          "無限小数表示",
          "離散型確率変数",
          "連続型確率変数",
          "連立微分方程式",
        ]
      },
      "no-mix-dearu-desumasu": {
        "preferInHeader": "である",
        "preferInBody": "である",
        "preferInList": "である",
        "strict": true
      }
    },
    "preset-japanese": true,
    "preset-jtf-style": true
  }
}
